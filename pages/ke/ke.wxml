<!--pages/ke/ke.wxml-->
<view class='body'>
 <view class='head'>
  <swiper indicator-dots="true"
    autoplay="{{autoplay}}" duration="500" indicator-color="#ccc" indicator-active-color="#fff">
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image"/>
      </swiper-item>
    </block>
  </swiper>
 </view>

 <view class='priceinform'>
  <view class='price'>￥<view class='pricenum'>100.00</view></view>
  <view class='originalprice'>价格 <view class='pricenum'>￥ 100.00</view></view>
  <view class='society'>年轻人的潮流穿搭社区</view>
  <view class='productbox clearfix'>
    <view class='productname'>Raisan赖夏季新款日系复古字母印花短袖男士拼色插肩宽松休闲T恤</view>
    <view class='share'>分享</view>
  </view>
  <view class='otherinform clearfix'>
    <view>快递：免运费</view>
    <view>月销401笔</view>
    <view>浙江绍兴</view>
  </view>
 </view>

  <view class='tickerbox'>
    <view class='ticker clearfix'>
      <view class='tickername'>领券</view>
      <view class='tickertitle'>满288元减30元券</view>
      <view class='rightarrow'><image src='../img/right.svg'></image></view>
    </view>
    <view class='ticker clearfix'>
      <view class='tickername'>服务</view>
      <view class='tickertitle'>7天无理由退货·7天内发货</view>
      <view class='rightarrow'><image src='../img/right.svg'></image></view>
    </view>
  </view>

 <view class='tickerbox'>
    <view class='ticker clearfix'>
      <view class='tickername'>规格</view>
      <view class='tickertitle'>选择 尺码，颜色</view>
      <view class='rightarrow'><image src='../img/right.svg'></image></view>
    </view>
    <view class='ticker clearfix'>
      <view class='tickername'>参数</view>
      <view class='tickertitle'>薄厚，袖长</view>
      <view class='rightarrow'><image src='../img/right.svg'></image></view>
    </view>
  </view>

  <view style='height:35px'></view>
  <view class='fixbottom'>
    <view class='store'><image src='../img/store.svg'></image>店铺</view>
    <view class='store'><image src='../img/kefu.svg'></image>客服</view>
    <view class='store'><image src='../img/collect.svg'></image>收藏</view>
    <view class='shopcar'>加入购物车</view>
    <view class='buybtn'>立即购买</view>
  </view>
</view>
