/**index.wxss**/
page{
  background: #d6d6d6;
  font-size: 16px;
}

.userinfo {
  width: 100%;
  background: #fff;
  height: 100rpx;
  border-top: 1rpx #fff;
}

.userinfo-avatar {
  width: 75rpx;
  height: 75rpx;
  margin: 14rpx;
  border-radius: 50%;
  float: left;
  margin-left: 20px
}

.userinfo-nickname {
  color: #000;
  line-height: 100rpx;
  float:left
}
.searchimg{
  float: left;
  width: 20px;
  height: 22px;
  margin-top: 13px;
  margin-left: 2%
}
.searchimg_white{
  float: right;
  width: 20px;
  height: 22px;
  margin-top: 3%;
  margin-right: 10px;
}
.navsearch{
  height: 20px;
  float: left;
  background: #fff;
  text-indent: 10px;
  margin: 12px 0 0 0;
  width: 43%;
  min-height: 0;
  border: 1px solid #d6d6d6
}
.searchbtn{
  text-align: center;
  font-size: 0.7em;
  color: #fff;
  width: 40px;
  height: 22px;
  margin-top: 12px;
  float: left;
  background: #999;
  line-height: 23px
}
.setting{
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin-top: 30rpx;
  padding-right: 50rpx
}

.usermotto {
  margin-top: 200px;
}

.bannerimg {
  width: 430px;
  height: 150px
}
.swiper{
  width: 100%;
  height: 120px;
  overflow:hidden;
}

.stepbox{
  width: 100%;
  height: 500rpx;
  background: #fff;
}
.floor1{
  width: 33%;
  height: 50%;
  border-left: 1px solid #d6d6d6;
  border-bottom: 1px solid #d6d6d6;
  float: left;
  text-align: center;
  padding-top: 5px
}
.floor1 .title{
  font-weight: 600;
  font-size: 1em;
}
.floor1 .information{
  font-size: 0.7em;
  padding-top:5px ;
  color:#ff8400
}
.floor1 .pic{
  width: 100%;
  overflow: hidden;
  height: 50%;
  margin-top: 7px
}
.floor1 .pic image{
  width: 60%;
  height: 100%
}
.floor2{
  height: 50%;
  width: 24.6%;
  float: left;
  border-right: 1px solid #d6d6d6;
  text-align: center
}
.floor2:last-child{
  border:none;
}
.floor2_title{
  font-weight: 600;
  font-size: 0.9em;
  padding-top: 5px
}
.floor2_information{
  font-size: 0.7em;
  padding-top: 5px
}
.floor2_pic{
  width: 100%;
  height: 50%;
  overflow: hidden;
}
.floor2_pic image{
  width: 100%;
  height: 100%;
}

.Recommend{
  background: #fff;
  margin-top: 10px;
  width: 100%
}

.card{
  padding-top: 10px;
}

.cardname{
  width: 100%;
  text-align: center;
  font-weight: 600;
  font-size: 1.1em;
  padding-bottom: 10px
}
.option{
  width: 100%;
  background: #fff;
  height: 90px;
  border-top: 1px solid #ccc;
  padding:12px 0 0 0; 
}
.optionpic{
  width: 25%;
  height:90%;
  overflow:hidden;
  float: left;
  margin-left: 10px
}
.optionpic image{
  width: 90%;
  height: 90%
}
.optionmain{
  width: 50%;
  height: 100%;
  text-align: left;
  float: left;
  padding-left: 3%
}
.productname{
  font-size: 0.8em;
  display: block;
  width: 100%;
  margin-top: 5px
}
.productprice{
  font-size: 0.8em;
  display: block;
  width: 100%;
  margin-top: 5px
}
.productnum{
  font-size: 0.7em;
  margin-top: 5px;
  margin-right: 10px;
  color:#999;
}
.optionbtn{
  float: left;
  width: 13%;
  margin-top: 20px;
  margin-left: 10px;
  background:#f00;
  color:#fff;
  border-radius: 7px;
  text-align: center;
  padding: 1px 0 2px 0;
}
.sell_out{
  background: #999
}