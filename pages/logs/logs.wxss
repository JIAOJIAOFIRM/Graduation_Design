page{
  background: #ebebeb;
  font-size: 16px
}

.card{
  width: 100%;
  height: 40px;
  background: #fff;
  border-top: 1px solid #ccc;
  position: relative
}
.card:first-child{
  border: none
}

.cardtitle{
  float: left;
  margin-left: 25px;
  line-height: 40px;
  font-weight: 600
}

.rightarrow{
  float: right;
  margin-right: 10px;
  line-height: 50px;
  width: 20px;
  height: 40px;
  overflow: hidden
}
.rightarrow image{
  width: 50%;
  height: 40%
}

.downarrow{
  float: right;
  margin-right: 10px;
  line-height: 50px;
  width: 22px;
  height: 32px;
  overflow: hidden;
}
.downarrow image{
  width: 70%;
  height: 35%
}

.list{
  width: 100%;
  background:#fff;
  font-size: 0.8em;
  z-index: -10;
  position: relative;
}
.li{
  width: 100%;
  height: 35px;
  text-indent: 25px;
  line-height: 35px;
}
.li:nth-child(odd){
  background: #f2f2f2
}